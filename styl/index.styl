@import "normalize.min.css"
@import "foundation.min.css"
@import "nib"

$green = #70ab29
$mauve = #94517b
$dark-green = #005e20
$white = #ffffff

body
  font-size: 18px;
  font-family: 'Lato', sans-serif;
  color: #6d6d6d;
  
h1
h2
h3
h4
h5
h6
  font-family: 'Lato', 'Josefin Sans', sans-serif;
  font-weight: 400;
  color: inherit;
  
h1
  font-size: 4rem;
  
h2
  font-size: 1.9rem;
  
h3
  font-size: 1.4rem;

h5
  font-size: 2rem;
  
h6 
  font-size: 2rem;
  
.section
  padding: 120px 0 80px;


.hero
  min-height: 100vh;
  color: white;
  background: url('img/hero-image.jpg'), $mauve;
  background-size: cover;
  background-position: center;
  position: relative;
  padding-top: 15%;

 @media only screen and (max-width: 49em)
  .hero
   padding-top: 15%;
 
.hero-info
  text-align: center;
  max-width: 530 px;
  margin-right: auto;
  margin-left: auto;
  
  & p
    opacity: 0.85;

  & .logo
     position: absolute;
     top: 25px;
     left: 120px;
     font-size: 1.2 em;
      
  & img
    position: absolute;
    top: 10px;
    left: 50px;
    max-width:60px;
    max-height:60px;
    
.button
  font-family: 'Lato', sans-serif;
  text-transform: uppercase;
  border: 2px solid white;
  border-radius: 60px;
  background-color: transparent;
  box-shadow: none;
  font-size: 20px;
  margin-top: 2rem;
  
  &:hover
    background-color: white;
    color: $mauve;
    
.about 
  & h2
    color: $green;
    max-width: 450px;
  
  & p
    max-width: 350px;
    min-width: 100px;
    
  & img
    max-width: 360px;

  & .circle-1
    height: 270px;
    width: 270px;
    border-radius: 50%;
    overflow: hidden;
    margin: -10% 0 20% 20%;
    box-shadow: 5px 10px 10px #EFEFEF;

  & .circle-2
    height: 180px;
    width: 180px;
    border-radius: 50%;
    overflow: hidden;
    position: absolute;
    margin: -30% 0 0 45%;
    box-shadow: 5px 10px 10px #EFEFEF;
 
 @media only screen and (max-width: 49em)
  .about
   & p
    max-width: 80%;
    min-width: 80%;
    margin-left: 10%;

   & h2
    margin-left: 10%;
    margin-top: 30px;

   & .circle-1
    margin: -10% 0 20% 20%;

   & .circle-2
    margin: -35% 0 0 45%;

.testimonials
  background-color: #F6F6F6;
  padding: 40px;
  overflow: auto;
  
  & .userpic
    width: 120px;
    height: 120px;
    border-radius: 60px;
    overflow: hidden;
    float: left;
    margin-right: 50px;
    box-shadow: 0px 8px 20px rgba(0,0,0,0.23);
    
  & .quote 
    padding-left: 170px;

    & p
      margin-bottom: 0.25rem;
    
    & footer
      text-align: right;
      padding-right: 50px;
    
    & .ratings
      max-width: 100px;
     
.features
  background-color: $green;
  background: -webkit-linear-gradient(#65992d, #90cf40); /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(#65992d, #90cf40); /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(#65992d, #90cf40); /* For Firefox 3.6 to 15 */
  background: linear-gradient(#65992d, #90cf40); /* Standard syntax (must be last) */
  color: white;
  text-align: center;
  
  & .description
    max-width: 530px;
    margin-right: auto;
    margin-left: auto;
  
  & .stats .icon
    background-image: url('img/bulb-icon.png');
  
  & .home .icon
    background-image: url('img/cloud-icon.png');
    
  & .love .icon
    background-image: url('img/pointer-icon.png');
  
  & .icon
    background-color: $dark-green;
    background-position: center;
    background-repeat: no-repeat;
    background-size: 70px 60px;
    width: 200px;
    height: 200px;
    border-radius: 100px;
    margin-right: auto;
    margin-left: auto;
    margin-top: 3.5rem;
    margin-bottom 3.5 em;
    box-shadow: 0px 4px 15px rgba(0,0,0,0.34);
    
  & h3
    margin-top: 2rem;
    font-weight: bold;

.gallery
  background-color: #F6F6F6;
  background: -webkit-linear-gradient( #ffffff,#D1D1D1); /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(#ffffff,#D1D1D1); /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(#ffffff,#D1D1D1); /* For Firefox 3.6 to 15 */
  background: linear-gradient(#ffffff,#D1D1D1); /* Standard syntax (must be last) */
  text-align: center;

  & .description
    max-width: 530px;
    padding-bottom: 5em;
    margin-right: auto;
    margin-left: auto;
    

  & img
    width: 300px;
    max-width:100%;
    border-radius: 45px;
    box-shadow: 0px 8px 20px rgba(0,0,0,0.23);


  & .text
     text-align: center;
     margin-top: 10px;
     font-size: 1.3em;
     

.benefits
  background: -webkit-linear-gradient(#99527e,#cd6c99); /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(#99527e,#cd6c99); /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(#99527e,#cd6c99); /* For Firefox 3.6 to 15 */
  background: linear-gradient(#99527e,#cd6c99); 
  text-align: center;
  color: white;
  padding-top:none;
  
  
  & .title
    text-align: left;
    font-size: 18px;
    padding-top: 2em;

  & .description-header
    max-width: 530px;
    margin-right: auto;
    margin-left: auto;
    margin-bottom: 5em;
    text-align: center;

  & .button
    text-transform: uppercase;
    border: 2px solid white;
    border-radius: 90px;
    background-color: transparent;
    box-shadow: none;
    font-size: 30px;
    height: 4em;
    width: 4em;
    padding: 1.5em 0 1.5em 0;
    margin-top: 1.5em;

    &:hover
     background-color: white;
     color: $mauve;

.footer
  background-color: #000828;
  color: white;
  
  & a 
    font-size: 18px; 
    font-weight: bold;
    text-align center;   
    
  & .description
    font-size: 13px;  
    text-align:center; 
   
  & .title
    font-size: 18px;
    text-align:center;  
  
  & p
    font-size: 18px; 

.section-footer
  padding: 50px 0 80px;



    